{
  "manifest_version": 2,
  "name": "Youtube Playlist",
  "version": "1",
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    "styles.css"
  ],
  "browser_action": {
    "default_icon": "youtube.png"
  },
  "permissions": [
    "https://*.youtube.com/*"
  ],
  "icons": {
    "16": "youtube-16x16.png",
    "128": "youtube-128x128.png"
  }
}